<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox fx:controller="main.java.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">

    <MenuBar>
        <Menu text="File">
            <items>
                <MenuItem text="Close" />
            </items>
        </Menu>
        <Menu text="View">
            <items>
                <MenuItem text="Analyze" />
            </items>
        </Menu>
    </MenuBar>

    <SplitPane VBox.vgrow="ALWAYS" orientation="VERTICAL" dividerPositions="0.6">
        <items>
            <VBox alignment="CENTER">
                <ImageView VBox.vgrow="ALWAYS" preserveRatio="true" fitHeight="400">
                    <image>
                        <Image url="http://www.patternsmart.com/cart/image/data/NT8/trend%20candle%20stick%20chart%20(4).png" />
                    </image>
                </ImageView>
            </VBox>
            <TableView fx:id="tradesTable">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <columns>
                    <TableColumn text="Number" fx:id="numberCol" minWidth="100" />
                    <TableColumn text="Type" fx:id="typeCol" minWidth="100" />
                    <TableColumn text="Entry Time" fx:id="entryTimeCol" minWidth="100" />
                    <TableColumn text="Exit Time" fx:id="exitTimeCol" minWidth="100" />
                    <TableColumn text="Entry Price" fx:id="entryPriceCol" minWidth="100" />
                    <TableColumn text="Exit Price" fx:id="exitPriceCol" minWidth="100" />
                    <TableColumn text="Add More Later" />
                </columns>
                <items>
                    <FXCollections fx:factory="observableArrayList" />
                </items>
            </TableView>
        </items>
    </SplitPane>

</VBox>